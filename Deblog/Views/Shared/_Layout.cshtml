<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - Deblog</title>
	<link rel="shortcut icon" href="/images/logoWithbg.png" type="image/png">
	<link rel="stylesheet" href="~/css/style.css">
	@if (IsSectionDefined("AddToHead"))
	{
		@RenderSection("AddToHead", required: false)
	}
</head>

<body>
	<nav>
		<a class="sitelogo" href="/">
			<img src="/images/logoWithbg.png" alt="">
			<span>Deblog</span>
		</a>
		<div class="navelements">
			<a asp-action="NewBlog" asp-controller="Blog" class="lse">Write</a>
			<a asp-action="NewBlog" asp-controller="Blog" class="lse"><i class="fal fa-bell"></i></a>
			<partial name="_LoginPartial.cshtml" />
		</div>
		<div class="curvehex">
			<img src="/Images/hex.jpg" alt="">
		</div>
	</nav>

	<div class="content">
		@RenderBody()
	</div>
	



	<div class="footer">
		<img src="/images/logoWithbg.png" alt="">
	</div>

	<script src="~/js/fontawasome5.15-pro.js"></script>
	<script src="~/js/index.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>